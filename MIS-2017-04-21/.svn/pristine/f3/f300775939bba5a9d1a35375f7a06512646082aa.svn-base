package fsk.handler.employeeDistribution;

import java.io.OutputStream;
import java.util.List;
import java.util.Map;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import net.sf.json.JSONObject;

import org.apache.log4j.Logger;

import fsk.entity.employeeDistribution.EmployeeDistributionEntity;
import fsk.pack.employeeDistribution.EmployeeDistributionPack;
import fsk.parse.employeeDistribution.EmployeeDistributionParse;
import fsk.service.employeeDistribution.EmployeeDistributionService;
import com.framework.system.common.service.SystemService;

import com.framework.system.business.handler.BaseHandler;
import com.framework.system.db.query.OrderVO;

 /**   
 * @Title: Handler
 * @Description: 护工分配列表业务处理器
 * @author feng.gu
 * @date 2016-12-28 13:33:00
 * @version V1.0   
 *
 */
public class EmployeeDistributionHandler extends BaseHandler{
	private static Logger logger = Logger.getLogger(EmployeeDistributionService.class);
	/**
	 * 解析器
	 */
	private EmployeeDistributionParse employeeDistributionParse = EmployeeDistributionParse.getInstance();
	/**
	 * 业务处理器
	 */
	private EmployeeDistributionService employeeDistributionService = EmployeeDistributionService.getInstance();
	/**
	 * 封装器
	 */
	private EmployeeDistributionPack employeeDistributionPack = EmployeeDistributionPack.getInstance();

	private static EmployeeDistributionHandler employeeDistributionHandler;
	
	/**
	 * 系统服务类
	 */
	private SystemService systemService = SystemService.getInstance();

	/**
	 * 获取实例
	 * 
	 * @return
	 */
	public static EmployeeDistributionHandler getInstance() {
		if (employeeDistributionHandler == null) {
			employeeDistributionHandler = new EmployeeDistributionHandler();
		}
		return employeeDistributionHandler;
	}

	/**
	 * 
	 * @param type 1-json 2-xml
	 * @param entityName
	 * @param command
	 * @param reqStr
	 * @param request
	 * @param response
	 */
	public String doHandler(int type,String command,String reqStr, HttpServletRequest request,
			HttpServletResponse response) {		
		logger.debug("请求消息："+reqStr);
		String resultStr="";
		try {
			// 解析
			Map<String, Object> parseMap = employeeDistributionParse.parse(type,command,reqStr,request);		
			String action = (String) parseMap.get("action");
			EmployeeDistributionEntity employeeDistribution = (EmployeeDistributionEntity) parseMap.get("employeeDistribution");
			List<EmployeeDistributionEntity> employeeDistributionList = (List<EmployeeDistributionEntity>) parseMap.get("employeeDistributionList");
			Integer id = (Integer) parseMap.get("id");			
			Map<String, Object> queryMap = (Map<String, Object>) parseMap.get("queryMap");
			Integer pageno = (Integer) parseMap.get("pageno");
			Integer pagesize = (Integer) parseMap.get("pagesize");
			List<OrderVO> orderList = (List<OrderVO>) parseMap.get("orderList");
			
															Boolean chargeEmployeeShow = (Boolean) parseMap.get("chargeEmployeeShow");
			Boolean delChargeEmployee = (Boolean) parseMap.get("delChargeEmployee");
																								Boolean nursingPlanServiceShow = (Boolean) parseMap.get("nursingPlanServiceShow");
			Boolean delNursingPlanService = (Boolean) parseMap.get("delNursingPlanService");
															
			// 业务处理
			Object result=null;
			if ("save".equals(action)) {
				result = employeeDistributionService.save(employeeDistribution);
			} else if ("saveList".equals(action)) {
				result = employeeDistributionService.saveList(employeeDistributionList);
			} else if ("getById".equals(action)) {
				result = employeeDistributionService.getById(id,chargeEmployeeShow,nursingPlanServiceShow);
			} else if ("getListByCondition".equals(action)) {
			    //根据数据权限 增加查询条件
				queryMap = systemService.addDataRuleByRoles("EmployeeDistributionEntity",queryMap,request);
				result = employeeDistributionService.getListByCondition(queryMap,orderList, pageno,
						pagesize,chargeEmployeeShow,nursingPlanServiceShow);
			} else if ("del".equals(action)) {
				result = employeeDistributionService.del(id,delChargeEmployee,delNursingPlanService);
			} else if ("delList".equals(action)) {
				result = employeeDistributionService.delList(queryMap,delChargeEmployee,delNursingPlanService);
			}
			// 封装
			Map<String, Object> packMap = employeeDistributionPack.pack(type,action,result,employeeDistribution);
			String actionBack = (String)packMap.get("action");
			String resultBack = (String)packMap.get("result");
			String desBack = (String)packMap.get("des");
			JSONObject pageBack = (JSONObject)packMap.get("page");
			JSONObject contentBack = (JSONObject)packMap.get("content");
			
			JSONObject repJson = new JSONObject();
			if(actionBack!=null&&!"".equals(actionBack)){
				repJson.put("action", actionBack);
			}
			if(resultBack!=null&&!"".equals(resultBack)){
				repJson.put("result", resultBack);
			}
			if(desBack!=null&&!"".equals(desBack)){
				repJson.put("des", desBack);
			}
			if(pageBack!=null){
				repJson.put("page", pageBack);
			}
			if(contentBack!=null&&!"".equals(contentBack)){
				repJson.put("content", contentBack);
			}
			logger.debug("返回消息："+repJson.toString());
			resultStr = repJson.toString();
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			logger.error(e);
		}
		return resultStr;
	}
}
