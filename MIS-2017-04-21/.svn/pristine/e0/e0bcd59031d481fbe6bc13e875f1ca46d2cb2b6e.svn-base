package fsk.pack.examinationRecord;

import java.util.HashMap;
import java.util.Map;

import net.sf.json.JSONArray;
import net.sf.json.JSONObject;

import org.apache.log4j.Logger;

import fsk.entity.examinationRecord.ExaminationRecordEntity;

import com.framework.system.db.query.PageList;
 /**   
 * @Title: Pack
 * @Description: 体检记录信息表封装器
 * @author feng.gu
 * @date 2016-10-11 15:23:10
 * @version V1.0   
 *
 */
public class ExaminationRecordPack {
	private static Logger logger = Logger.getLogger(ExaminationRecordPack.class);
	private static ExaminationRecordPack examinationRecordPack;

	/**
	 * 获取实例
	 * 
	 * @return
	 */
	public static ExaminationRecordPack getInstance() {
		if (examinationRecordPack == null) {
			examinationRecordPack = new ExaminationRecordPack();
		}
		return examinationRecordPack;
	}

	public Map<String, Object> pack(int type, String action, Object request,Object entity) {
		// 定义返回参数
		Map<String, Object> packMap = new HashMap<String, Object>();
		if (type == 1) {
			// json
			packMap = this.packByJson(action, request,entity);
		} else if (type == 2) {
			// xml
			packMap = this.packByXml(action, request,entity);
		}
		return packMap;
	}

	private Map<String, Object> packByJson(String action, Object request,Object entity) {
		// 定义返回参数
		Map<String, Object> packMap = new HashMap<String, Object>();
		String actionBack = null;
		String resultBack = null;
		String desBack = null;
		JSONObject pageBack = null;
		JSONObject contentBack = null;
		try {
			if ("save".equals(action)) {
				actionBack="ADD_EXAMINATION_RECORD_INFO_RESPONSE";	
				if(request.equals(true)){
					resultBack="100";
					desBack="success";
				}else if(request.equals(false)){
					resultBack="200";
					desBack="failure";
				}   
				ExaminationRecordEntity examinationRecord = (ExaminationRecordEntity)entity;
				if(examinationRecord!=null){
					contentBack = new JSONObject();
					contentBack.put("id", examinationRecord.getId());
					
																									if(examinationRecord.getOlder()!=null){
						contentBack.put("olderId", examinationRecord.getOlder().getId());
					}
																																								if(examinationRecord.getCreateEmployee()!=null){
						contentBack.put("createEmployeeId", examinationRecord.getCreateEmployee().getId());
					}
																																																																																																																																	}
			} else if ("getById".equals(action)) {
				actionBack="QUERY_EXAMINATION_RECORD_INFO_RESPONSE";		
				resultBack="100";
				desBack="success";
				ExaminationRecordEntity examinationRecord = (ExaminationRecordEntity)request;
				if(examinationRecord!=null){
					contentBack = JSONObject.fromObject(examinationRecord);
																									if(examinationRecord.getOlder()!=null){
						contentBack.put("older", JSONObject.fromObject(examinationRecord.getOlder()));
					}
																																								if(examinationRecord.getCreateEmployee()!=null){
						contentBack.put("createEmployee", JSONObject.fromObject(examinationRecord.getCreateEmployee()));
					}
																																            if(examinationRecord.getExaminationRecordFileList()!=null){
						contentBack.put("examinationRecordFileList", JSONArray.fromObject(examinationRecord.getExaminationRecordFileList()));
					}
																																					            if(examinationRecord.getExaminationRecordPhotoList()!=null){
						contentBack.put("examinationRecordPhotoList", JSONArray.fromObject(examinationRecord.getExaminationRecordPhotoList()));
					}
																																					            if(examinationRecord.getExaminationDataList()!=null){
						contentBack.put("examinationDataList", JSONArray.fromObject(examinationRecord.getExaminationDataList()));
					}
																													}
			} else if ("getListByCondition".equals(action)) {
				actionBack="QUERY_EXAMINATION_RECORD_LIST_RESPONSE";
				resultBack="100";
				desBack="success";
				PageList pageList = (PageList)request;
				if(pageList!=null&&pageList.getResultList()!=null&&pageList.getResultList().size()>0){
					contentBack = new JSONObject();
					pageBack = new JSONObject();
					JSONArray list = JSONArray.fromObject(pageList.getResultList());
					contentBack.put("examinationRecordList", list);
					
					pageBack.put("pageno", pageList.getPageno());
					pageBack.put("pagesize", pageList.getPagesize());
					pageBack.put("recordCount", pageList.getRecordCount());
					pageBack.put("pageCount", pageList.getPageCount());
					
				}
			} else if ("del".equals(action)) {
				actionBack="DEL_EXAMINATION_RECORD_INFO_REQUEST";	
				if(request.equals(true)){
					resultBack="100";
					desBack="success";
				}else if(request.equals(false)){
					resultBack="200";
					desBack="failure";
				} 
			} else if ("delList".equals(action)) {
				actionBack="DEL_EXAMINATION_RECORD_LIST_REQUEST";	
				if(request.equals(true)){
					resultBack="100";
					desBack="success";
				}else if(request.equals(false)){
					resultBack="200";
					desBack="failure";
				} 
			}
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			logger.error(e);
		}
		if (actionBack != null && !"".equals(actionBack)) {
			packMap.put("action", actionBack);
		}
		if (resultBack != null&& !"".equals(resultBack)) {
			packMap.put("result", resultBack);
		}
		if (desBack != null&& !"".equals(desBack)) {
			packMap.put("des", desBack);
		}
		if (pageBack != null) {
			packMap.put("page", pageBack);
		}
		if (contentBack != null) {
			packMap.put("content", contentBack);
		}
		return packMap;
	}

	private Map<String, Object> packByXml(String action, Object request,Object entity) {
		Map<String, Object> packMap = new HashMap<String, Object>();
		return packMap;
	}

}
