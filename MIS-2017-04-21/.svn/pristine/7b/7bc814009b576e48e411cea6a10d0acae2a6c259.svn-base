package fsk.handler.serviceTaskService;

import java.io.OutputStream;
import java.util.List;
import java.util.Map;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import net.sf.json.JSONObject;

import org.apache.log4j.Logger;

import fsk.entity.serviceTaskService.ServiceTaskServiceEntity;
import fsk.pack.serviceTaskService.ServiceTaskServicePack;
import fsk.parse.serviceTaskService.ServiceTaskServiceParse;
import fsk.service.serviceTaskService.ServiceTaskServiceService;
import com.framework.system.common.service.SystemService;

import com.framework.system.business.handler.BaseHandler;
import com.framework.system.db.query.OrderVO;

 /**   
 * @Title: Handler
 * @Description: 服务工单和服务项中间表业务处理器
 * @author feng.gu
 * @date 2016-08-10 09:05:41
 * @version V1.0   
 *
 */
public class ServiceTaskServiceHandler extends BaseHandler{
	private static Logger logger = Logger.getLogger(ServiceTaskServiceService.class);
	/**
	 * 解析器
	 */
	private ServiceTaskServiceParse serviceTaskServiceParse = ServiceTaskServiceParse.getInstance();
	/**
	 * 业务处理器
	 */
	private ServiceTaskServiceService serviceTaskServiceService = ServiceTaskServiceService.getInstance();
	/**
	 * 封装器
	 */
	private ServiceTaskServicePack serviceTaskServicePack = ServiceTaskServicePack.getInstance();

	private static ServiceTaskServiceHandler serviceTaskServiceHandler;
	
	/**
	 * 系统服务类
	 */
	private SystemService systemService = SystemService.getInstance();

	/**
	 * 获取实例
	 * 
	 * @return
	 */
	public static ServiceTaskServiceHandler getInstance() {
		if (serviceTaskServiceHandler == null) {
			serviceTaskServiceHandler = new ServiceTaskServiceHandler();
		}
		return serviceTaskServiceHandler;
	}

	/**
	 * 
	 * @param type 1-json 2-xml
	 * @param entityName
	 * @param command
	 * @param reqStr
	 * @param request
	 * @param response
	 */
	public String doHandler(int type,String command,String reqStr, HttpServletRequest request,
			HttpServletResponse response) {	
		logger.debug("请求消息："+reqStr);
		String resultStr="";
		try {
			// 解析
			Map<String, Object> parseMap = serviceTaskServiceParse.parse(type,command,reqStr,request);		
			String action = (String) parseMap.get("action");
			ServiceTaskServiceEntity serviceTaskService = (ServiceTaskServiceEntity) parseMap.get("serviceTaskService");
			List<ServiceTaskServiceEntity> serviceTaskServiceList = (List<ServiceTaskServiceEntity>) parseMap.get("serviceTaskServiceList");
			Integer id = (Integer) parseMap.get("id");			
			Map<String, Object> queryMap = (Map<String, Object>) parseMap.get("queryMap");
			int pageno = (Integer) parseMap.get("pageno");
			int pagesize = (Integer) parseMap.get("pagesize");
			List<OrderVO> orderList = (List<OrderVO>) parseMap.get("orderList");
			
															Boolean serviceTaskShow = (Boolean) parseMap.get("serviceTaskShow");
			Boolean delServiceTask = (Boolean) parseMap.get("delServiceTask");
																								Boolean serviceShow = (Boolean) parseMap.get("serviceShow");
			Boolean delService = (Boolean) parseMap.get("delService");
															
			// 业务处理
			Object result=null;
			if ("save".equals(action)) {
				result = serviceTaskServiceService.save(serviceTaskService);
			} else if ("saveList".equals(action)) {
				result = serviceTaskServiceService.saveList(serviceTaskServiceList);
			} else if ("getById".equals(action)) {
				result = serviceTaskServiceService.getById(id,serviceTaskShow,serviceShow);
			} else if ("getListByCondition".equals(action)) {
			    //根据数据权限 增加查询条件
				queryMap = systemService.addDataRule("ServiceTaskServiceEntity",queryMap,request);
				result = serviceTaskServiceService.getListByCondition(queryMap,orderList, pageno,
						pagesize,serviceTaskShow,serviceShow);
			} else if ("del".equals(action)) {
				result = serviceTaskServiceService.del(id,delServiceTask,delService);
			} else if ("delList".equals(action)) {
				result = serviceTaskServiceService.delList(queryMap,delServiceTask,delService);
			}
			// 封装
			Map<String, Object> packMap = serviceTaskServicePack.pack(type,action,result,serviceTaskService);
			String actionBack = (String)packMap.get("action");
			String resultBack = (String)packMap.get("result");
			String desBack = (String)packMap.get("des");
			JSONObject pageBack = (JSONObject)packMap.get("page");
			JSONObject contentBack = (JSONObject)packMap.get("content");
			
			JSONObject repJson = new JSONObject();
			if(actionBack!=null&&!"".equals(actionBack)){
				repJson.put("action", actionBack);
			}
			if(resultBack!=null&&!"".equals(resultBack)){
				repJson.put("result", resultBack);
			}
			if(desBack!=null&&!"".equals(desBack)){
				repJson.put("des", desBack);
			}
			if(pageBack!=null){
				repJson.put("page", pageBack);
			}
			if(contentBack!=null&&!"".equals(contentBack)){
				repJson.put("content", contentBack);
			}
			logger.debug("返回消息："+repJson.toString());
			resultStr = repJson.toString();
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			logger.error(e);
		}
		return resultStr;
	}
}
