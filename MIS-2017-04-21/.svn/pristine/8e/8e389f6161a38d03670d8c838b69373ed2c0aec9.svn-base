package weixin.controller;

import javax.servlet.http.HttpServletRequest;

import org.apache.log4j.Logger;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

@RequestMapping("/wechatPhysiologicalPar")
@Controller
public class WeixinPhysiologicalParametersController {
	private static Logger logger = Logger
			.getLogger(WeixinPhysiologicalParametersController.class);
	
	/**
	 * 生理参数概况页
	 * 
	 * @param request
	 * @return
	 */
	@RequestMapping(params = "main")
	public ModelAndView center(HttpServletRequest request) {
		ModelAndView mav = new ModelAndView("/weixin/weixinPhysiologicalParameters/weixinSLCSGK");
		String olderId = request.getParameter("olderId");
		mav.addObject("olderId", olderId);
		return mav;
	}
	
	/**
	 * 生理参数历史页1（脉搏，呼吸，体温，血氧，骨密度）
	 * 
	 * @param request
	 * @return
	 */
	@RequestMapping(params = "mainHistory1")
	public ModelAndView centerHistory1(HttpServletRequest request) {
		ModelAndView mav = new ModelAndView("/weixin/weixinPhysiologicalParameters/weixinSLCSHistory1");
		String olderId = request.getParameter("olderId");
		String type = request.getParameter("type");
		mav.addObject("olderId", olderId);
		mav.addObject("type", type);
		return mav;
	}
	
	/**
	 * 生理参数历史页2（收缩压/舒张压,餐后/餐前血糖）
	 * 
	 * @param request
	 * @return
	 */
	@RequestMapping(params = "mainHistory2")
	public ModelAndView centerHistory2(HttpServletRequest request) {
		ModelAndView mav = new ModelAndView("/weixin/weixinPhysiologicalParameters/weixinSLCSHistory2");
		String olderId = request.getParameter("olderId");
		String type = request.getParameter("type");
		mav.addObject("olderId", olderId);
		mav.addObject("type", type);
		return mav;
	}
}
