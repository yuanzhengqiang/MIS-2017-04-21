package fsk.pack.sendReceivePhoto;

import java.util.HashMap;
import java.util.Map;

import net.sf.json.JSONArray;
import net.sf.json.JSONObject;

import org.apache.log4j.Logger;

import fsk.entity.sendReceivePhoto.SendReceivePhotoEntity;

import com.framework.system.db.query.PageList;
 /**   
 * @Title: Pack
 * @Description: 交接班图片封装器
 * @author feng.gu
 * @date 2016-10-19 13:13:14
 * @version V1.0   
 *
 */
public class SendReceivePhotoPack {
	private static Logger logger = Logger.getLogger(SendReceivePhotoPack.class);
	private static SendReceivePhotoPack sendReceivePhotoPack;

	/**
	 * 获取实例
	 * 
	 * @return
	 */
	public static SendReceivePhotoPack getInstance() {
		if (sendReceivePhotoPack == null) {
			sendReceivePhotoPack = new SendReceivePhotoPack();
		}
		return sendReceivePhotoPack;
	}

	public Map<String, Object> pack(int type, String action, Object request,Object entity) {
		// 定义返回参数
		Map<String, Object> packMap = new HashMap<String, Object>();
		if (type == 1) {
			// json
			packMap = this.packByJson(action, request,entity);
		} else if (type == 2) {
			// xml
			packMap = this.packByXml(action, request,entity);
		}
		return packMap;
	}

	private Map<String, Object> packByJson(String action, Object request,Object entity) {
		// 定义返回参数
		Map<String, Object> packMap = new HashMap<String, Object>();
		String actionBack = null;
		String resultBack = null;
		String desBack = null;
		JSONObject pageBack = null;
		JSONObject contentBack = null;
		try {
			if ("save".equals(action)) {
				actionBack="ADD_SEND_RECEIVE_PHOTO_INFO_RESPONSE";	
				if(request.equals(true)){
					resultBack="100";
					desBack="success";
				}else if(request.equals(false)){
					resultBack="200";
					desBack="failure";
				}   
				SendReceivePhotoEntity sendReceivePhoto = (SendReceivePhotoEntity)entity;
				if(sendReceivePhoto!=null){
					contentBack = new JSONObject();
					contentBack.put("id", sendReceivePhoto.getId());
					
																									if(sendReceivePhoto.getSendReceive()!=null){
						contentBack.put("sendReceiveId", sendReceivePhoto.getSendReceive().getId());
					}
																								}
			} else if ("getById".equals(action)) {
				actionBack="QUERY_SEND_RECEIVE_PHOTO_INFO_RESPONSE";		
				resultBack="100";
				desBack="success";
				SendReceivePhotoEntity sendReceivePhoto = (SendReceivePhotoEntity)request;
				if(sendReceivePhoto!=null){
					contentBack = JSONObject.fromObject(sendReceivePhoto);
																									if(sendReceivePhoto.getSendReceive()!=null){
						contentBack.put("sendReceive", JSONObject.fromObject(sendReceivePhoto.getSendReceive()));
					}
																								}
			} else if ("getListByCondition".equals(action)) {
				actionBack="QUERY_SEND_RECEIVE_PHOTO_LIST_RESPONSE";
				resultBack="100";
				desBack="success";
				PageList pageList = (PageList)request;
				if(pageList!=null&&pageList.getResultList()!=null&&pageList.getResultList().size()>0){
					contentBack = new JSONObject();
					pageBack = new JSONObject();
					JSONArray list = JSONArray.fromObject(pageList.getResultList());
					contentBack.put("sendReceivePhotoList", list);
					
					pageBack.put("pageno", pageList.getPageno());
					pageBack.put("pagesize", pageList.getPagesize());
					pageBack.put("recordCount", pageList.getRecordCount());
					pageBack.put("pageCount", pageList.getPageCount());
					
				}
			} else if ("del".equals(action)) {
				actionBack="DEL_SEND_RECEIVE_PHOTO_INFO_REQUEST";	
				if(request.equals(true)){
					resultBack="100";
					desBack="success";
				}else if(request.equals(false)){
					resultBack="200";
					desBack="failure";
				} 
			} else if ("delList".equals(action)) {
				actionBack="DEL_SEND_RECEIVE_PHOTO_LIST_REQUEST";	
				if(request.equals(true)){
					resultBack="100";
					desBack="success";
				}else if(request.equals(false)){
					resultBack="200";
					desBack="failure";
				} 
			}
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			logger.error(e);
		}
		if (actionBack != null && !"".equals(actionBack)) {
			packMap.put("action", actionBack);
		}
		if (resultBack != null&& !"".equals(resultBack)) {
			packMap.put("result", resultBack);
		}
		if (desBack != null&& !"".equals(desBack)) {
			packMap.put("des", desBack);
		}
		if (pageBack != null) {
			packMap.put("page", pageBack);
		}
		if (contentBack != null) {
			packMap.put("content", contentBack);
		}
		return packMap;
	}

	private Map<String, Object> packByXml(String action, Object request,Object entity) {
		Map<String, Object> packMap = new HashMap<String, Object>();
		return packMap;
	}

}
