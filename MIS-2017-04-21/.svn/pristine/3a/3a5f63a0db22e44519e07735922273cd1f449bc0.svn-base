package com.framework.system.common.pack.userGroup;

import java.util.HashMap;
import java.util.Map;

import net.sf.json.JSONArray;
import net.sf.json.JSONObject;

import org.apache.log4j.Logger;

import com.framework.system.common.entity.userGroup.UserGroupEntity;

import com.framework.system.db.query.PageList;

/**
 * @Title: Pack
 * @Description: 用户组封装器
 * @author feng.gu
 * @date 2015-12-02 09:20:57
 * @version V1.0
 * 
 */
public class UserGroupPack {
	private static Logger logger = Logger.getLogger(UserGroupPack.class);
	private static UserGroupPack userGroupPack;

	/**
	 * 获取实例
	 * 
	 * @return
	 */
	public static UserGroupPack getInstance() {
		if (userGroupPack == null) {
			userGroupPack = new UserGroupPack();
		}
		return userGroupPack;
	}

	public Map<String, Object> pack(int type, String action, Object request,
			Object entity) {
		// 定义返回参数
		Map<String, Object> packMap = new HashMap<String, Object>();
		if (type == 1) {
			// json
			packMap = this.packByJson(action, request, entity);
		} else if (type == 2) {
			// xml
			packMap = this.packByXml(action, request, entity);
		}
		return packMap;
	}

	private Map<String, Object> packByJson(String action, Object request,
			Object entity) {
		// 定义返回参数
		Map<String, Object> packMap = new HashMap<String, Object>();
		String actionBack = null;
		String resultBack = null;
		String desBack = null;
		JSONObject pageBack = null;
		JSONObject contentBack = null;
		try {
			if ("save".equals(action)) {
				actionBack = "ADD_USER_GROUP_INFO_RESPONSE";
				if (request.equals(true)) {
					resultBack = "100";
					desBack = "success";
				} else if (request.equals(false)) {
					resultBack = "200";
					desBack = "failure";
				}
				UserGroupEntity userGroup = (UserGroupEntity) entity;
				if (userGroup != null) {
					contentBack = new JSONObject();
					contentBack.put("id", userGroup.getId());

					if (userGroup.getParentUserGroup() != null) {
						contentBack.put("parentUserGroupId", userGroup
								.getParentUserGroup().getId());
					}
					if (userGroup.getCreateUser() != null) {
						contentBack.put("createUserId", userGroup
								.getCreateUser().getId());
					}
					if (userGroup.getUpdateUser() != null) {
						contentBack.put("updateUserId", userGroup
								.getUpdateUser().getId());
					}
				}
			} else if ("getById".equals(action)) {
				actionBack = "QUERY_USER_GROUP_INFO_RESPONSE";
				resultBack = "100";
				desBack = "success";
				UserGroupEntity userGroup = (UserGroupEntity) request;
				if (userGroup != null) {
					contentBack = JSONObject.fromObject(userGroup);
					if (userGroup.getParentUserGroup() != null) {
						contentBack.put("parentUserGroup", JSONObject
								.fromObject(userGroup.getParentUserGroup()));
					}
					if (userGroup.getChildUserGroupList() != null) {
						contentBack.put("childUserGroupList", JSONObject
								.fromObject(userGroup.getChildUserGroupList()));
					}
					if (userGroup.getCreateUser() != null) {
						contentBack.put("createUser", JSONObject
								.fromObject(userGroup.getCreateUser()));
					}
					if (userGroup.getUpdateUser() != null) {
						contentBack.put("updateUser", JSONObject
								.fromObject(userGroup.getUpdateUser()));
					}
					if (userGroup.getUserList() != null) {
						contentBack.put("userList",
								JSONObject.fromObject(userGroup.getUserList()));
					}
				}
			} else if ("getListByCondition".equals(action)) {
				actionBack = "QUERY_USER_GROUP_LIST_RESPONSE";
				resultBack = "100";
				desBack = "success";
				PageList pageList = (PageList) request;
				if (pageList != null && pageList.getResultList() != null
						&& pageList.getResultList().size() > 0) {
					contentBack = new JSONObject();
					pageBack = new JSONObject();
					JSONArray list = JSONArray.fromObject(pageList
							.getResultList());
					contentBack.put("userGroupList", list);

					pageBack.put("pageno", pageList.getPageno());
					pageBack.put("pagesize", pageList.getPagesize());
					pageBack.put("recordCount", pageList.getRecordCount());
					pageBack.put("pageCount", pageList.getPageCount());

				}
			} else if ("del".equals(action)) {
				actionBack = "DEL_USER_GROUP_INFO_REQUEST";
				if (request.equals(true)) {
					resultBack = "100";
					desBack = "success";
				} else if (request.equals(false)) {
					resultBack = "200";
					desBack = "failure";
				}
			} else if ("delList".equals(action)) {
				actionBack = "DEL_USER_GROUP_LIST_REQUEST";
				if (request.equals(true)) {
					resultBack = "100";
					desBack = "success";
				} else if (request.equals(false)) {
					resultBack = "200";
					desBack = "failure";
				}
			}
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			logger.error(e);
		}
		if (actionBack != null && !"".equals(actionBack)) {
			packMap.put("action", actionBack);
		}
		if (resultBack != null && !"".equals(resultBack)) {
			packMap.put("result", resultBack);
		}
		if (desBack != null && !"".equals(desBack)) {
			packMap.put("des", desBack);
		}
		if (pageBack != null) {
			packMap.put("page", pageBack);
		}
		if (contentBack != null) {
			packMap.put("content", contentBack);
		}
		return packMap;
	}

	private Map<String, Object> packByXml(String action, Object request,
			Object entity) {
		Map<String, Object> packMap = new HashMap<String, Object>();
		return packMap;
	}

}
