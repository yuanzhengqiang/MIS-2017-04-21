package fsk.handler.siteServiceArea;

import java.io.OutputStream;
import java.util.List;
import java.util.Map;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import net.sf.json.JSONObject;

import org.apache.log4j.Logger;

import fsk.entity.siteServiceArea.SiteServiceAreaEntity;
import fsk.pack.siteServiceArea.SiteServiceAreaPack;
import fsk.parse.siteServiceArea.SiteServiceAreaParse;
import fsk.service.siteServiceArea.SiteServiceAreaService;
import com.framework.system.common.service.SystemService;

import com.framework.system.business.handler.BaseHandler;
import com.framework.system.db.query.OrderVO;

 /**   
 * @Title: Handler
 * @Description: 站点服务区域关联表业务处理器
 * @author feng.gu
 * @date 2016-06-21 08:39:49
 * @version V1.0   
 *
 */
public class SiteServiceAreaHandler extends BaseHandler{
	private static Logger logger = Logger.getLogger(SiteServiceAreaService.class);
	/**
	 * 解析器
	 */
	private SiteServiceAreaParse siteServiceAreaParse = SiteServiceAreaParse.getInstance();
	/**
	 * 业务处理器
	 */
	private SiteServiceAreaService siteServiceAreaService = SiteServiceAreaService.getInstance();
	/**
	 * 封装器
	 */
	private SiteServiceAreaPack siteServiceAreaPack = SiteServiceAreaPack.getInstance();

	private static SiteServiceAreaHandler siteServiceAreaHandler;
	
	/**
	 * 系统服务类
	 */
	private SystemService systemService = SystemService.getInstance();

	/**
	 * 获取实例
	 * 
	 * @return
	 */
	public static SiteServiceAreaHandler getInstance() {
		if (siteServiceAreaHandler == null) {
			siteServiceAreaHandler = new SiteServiceAreaHandler();
		}
		return siteServiceAreaHandler;
	}

	/**
	 * 
	 * @param type 1-json 2-xml
	 * @param entityName
	 * @param command
	 * @param reqStr
	 * @param request
	 * @param response
	 */
	public String doHandler(int type,String command,String reqStr, HttpServletRequest request,
			HttpServletResponse response) {		
		logger.debug("请求消息："+reqStr);
		String resultStr="";
		try {
			// 解析
			Map<String, Object> parseMap = siteServiceAreaParse.parse(type,command,reqStr,request);		
			String action = (String) parseMap.get("action");
			SiteServiceAreaEntity siteServiceArea = (SiteServiceAreaEntity) parseMap.get("siteServiceArea");
			List<SiteServiceAreaEntity> siteServiceAreaList = (List<SiteServiceAreaEntity>) parseMap.get("siteServiceAreaList");
			Integer id = (Integer) parseMap.get("id");			
			Map<String, Object> queryMap = (Map<String, Object>) parseMap.get("queryMap");
			int pageno = (Integer) parseMap.get("pageno");
			int pagesize = (Integer) parseMap.get("pagesize");
			List<OrderVO> orderList = (List<OrderVO>) parseMap.get("orderList");
			
															Boolean siteShow = (Boolean) parseMap.get("siteShow");
			Boolean delSite = (Boolean) parseMap.get("delSite");
																								Boolean serviceStreetShow = (Boolean) parseMap.get("serviceStreetShow");
			Boolean delServiceStreet = (Boolean) parseMap.get("delServiceStreet");
															
			// 业务处理
			Object result=null;
			if ("save".equals(action)) {
				result = siteServiceAreaService.save(siteServiceArea);
			} else if ("saveList".equals(action)) {
				result = siteServiceAreaService.saveList(siteServiceAreaList);
			} else if ("getById".equals(action)) {
				result = siteServiceAreaService.getById(id,siteShow,serviceStreetShow);
			} else if ("getListByCondition".equals(action)) {
			    //根据数据权限 增加查询条件
				queryMap = systemService.addDataRule("SiteServiceAreaEntity",queryMap,request);
				result = siteServiceAreaService.getListByCondition(queryMap,orderList, pageno,
						pagesize,siteShow,serviceStreetShow);
			} else if ("del".equals(action)) {
				result = siteServiceAreaService.del(id,delSite,delServiceStreet);
			} else if ("delList".equals(action)) {
				result = siteServiceAreaService.delList(queryMap,delSite,delServiceStreet);
			}
			// 封装
			Map<String, Object> packMap = siteServiceAreaPack.pack(type,action,result,siteServiceArea);
			String actionBack = (String)packMap.get("action");
			String resultBack = (String)packMap.get("result");
			String desBack = (String)packMap.get("des");
			JSONObject pageBack = (JSONObject)packMap.get("page");
			JSONObject contentBack = (JSONObject)packMap.get("content");
			
			JSONObject repJson = new JSONObject();
			if(actionBack!=null&&!"".equals(actionBack)){
				repJson.put("action", actionBack);
			}
			if(resultBack!=null&&!"".equals(resultBack)){
				repJson.put("result", resultBack);
			}
			if(desBack!=null&&!"".equals(desBack)){
				repJson.put("des", desBack);
			}
			if(pageBack!=null){
				repJson.put("page", pageBack);
			}
			if(contentBack!=null&&!"".equals(contentBack)){
				repJson.put("content", contentBack);
			}
			logger.debug("返回消息："+repJson.toString());
			resultStr = repJson.toString();
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			logger.error(e);
		}
		return resultStr;
	}
}
