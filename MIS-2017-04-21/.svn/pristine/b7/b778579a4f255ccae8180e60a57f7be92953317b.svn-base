package fsk.handler.skinLesions;

import java.io.OutputStream;
import java.util.List;
import java.util.Map;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import net.sf.json.JSONObject;

import org.apache.log4j.Logger;

import fsk.entity.skinLesions.SkinLesionsEntity;
import fsk.pack.skinLesions.SkinLesionsPack;
import fsk.parse.skinLesions.SkinLesionsParse;
import fsk.service.skinLesions.SkinLesionsService;
import com.framework.system.common.service.SystemService;

import com.framework.system.business.handler.BaseHandler;
import com.framework.system.db.query.OrderVO;

 /**   
 * @Title: Handler
 * @Description: 压疮列表业务处理器
 * @author feng.gu
 * @date 2016-07-11 17:40:05
 * @version V1.0   
 *
 */
public class SkinLesionsHandler extends BaseHandler{
	private static Logger logger = Logger.getLogger(SkinLesionsService.class);
	/**
	 * 解析器
	 */
	private SkinLesionsParse skinLesionsParse = SkinLesionsParse.getInstance();
	/**
	 * 业务处理器
	 */
	private SkinLesionsService skinLesionsService = SkinLesionsService.getInstance();
	/**
	 * 封装器
	 */
	private SkinLesionsPack skinLesionsPack = SkinLesionsPack.getInstance();

	private static SkinLesionsHandler skinLesionsHandler;
	
	/**
	 * 系统服务类
	 */
	private SystemService systemService = SystemService.getInstance();

	/**
	 * 获取实例
	 * 
	 * @return
	 */
	public static SkinLesionsHandler getInstance() {
		if (skinLesionsHandler == null) {
			skinLesionsHandler = new SkinLesionsHandler();
		}
		return skinLesionsHandler;
	}

	/**
	 * 
	 * @param type 1-json 2-xml
	 * @param entityName
	 * @param command
	 * @param reqStr
	 * @param request
	 * @param response
	 */
	public String doHandler(int type,String command,String reqStr, HttpServletRequest request,
			HttpServletResponse response) {	
		logger.debug("请求消息："+reqStr);
		String resultStr="";
		try {
			// 解析
			Map<String, Object> parseMap = skinLesionsParse.parse(type,command,reqStr,request);		
			String action = (String) parseMap.get("action");
			SkinLesionsEntity skinLesions = (SkinLesionsEntity) parseMap.get("skinLesions");
			List<SkinLesionsEntity> skinLesionsList = (List<SkinLesionsEntity>) parseMap.get("skinLesionsList");
			Integer id = (Integer) parseMap.get("id");			
			Map<String, Object> queryMap = (Map<String, Object>) parseMap.get("queryMap");
			int pageno = (Integer) parseMap.get("pageno");
			int pagesize = (Integer) parseMap.get("pagesize");
			List<OrderVO> orderList = (List<OrderVO>) parseMap.get("orderList");
			
															Boolean recoveryShow = (Boolean) parseMap.get("recoveryShow");
			Boolean delRecovery = (Boolean) parseMap.get("delRecovery");
															
			// 业务处理
			Object result=null;
			if ("save".equals(action)) {
				result = skinLesionsService.save(skinLesions);
			} else if ("saveList".equals(action)) {
				result = skinLesionsService.saveList(skinLesionsList);
			} else if ("getById".equals(action)) {
				result = skinLesionsService.getById(id,recoveryShow);
			} else if ("getListByCondition".equals(action)) {
			    //根据数据权限 增加查询条件
				queryMap = systemService.addDataRule("SkinLesionsEntity",queryMap,request);
				result = skinLesionsService.getListByCondition(queryMap,orderList, pageno,
						pagesize,recoveryShow);
			} else if ("del".equals(action)) {
				result = skinLesionsService.del(id,delRecovery);
			} else if ("delList".equals(action)) {
				result = skinLesionsService.delList(queryMap,delRecovery);
			}
			// 封装
			Map<String, Object> packMap = skinLesionsPack.pack(type,action,result,skinLesions);
			String actionBack = (String)packMap.get("action");
			String resultBack = (String)packMap.get("result");
			String desBack = (String)packMap.get("des");
			JSONObject pageBack = (JSONObject)packMap.get("page");
			JSONObject contentBack = (JSONObject)packMap.get("content");
			
			JSONObject repJson = new JSONObject();
			if(actionBack!=null&&!"".equals(actionBack)){
				repJson.put("action", actionBack);
			}
			if(resultBack!=null&&!"".equals(resultBack)){
				repJson.put("result", resultBack);
			}
			if(desBack!=null&&!"".equals(desBack)){
				repJson.put("des", desBack);
			}
			if(pageBack!=null){
				repJson.put("page", pageBack);
			}
			if(contentBack!=null&&!"".equals(contentBack)){
				repJson.put("content", contentBack);
			}
			logger.debug("返回消息："+repJson.toString());
			resultStr = repJson.toString();
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			logger.error(e);
		}
		return resultStr;
	}
}
