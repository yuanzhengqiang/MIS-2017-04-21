package fsk.handler.softInfo;

import java.io.OutputStream;
import java.util.List;
import java.util.Map;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import net.sf.json.JSONObject;

import org.apache.log4j.Logger;

import fsk.entity.softInfo.SoftInfoEntity;
import fsk.pack.softInfo.SoftInfoPack;
import fsk.parse.softInfo.SoftInfoParse;
import fsk.service.softInfo.SoftInfoService;
import fsk.util.CreateReportUtil;

import com.framework.system.common.service.SystemService;

import com.framework.system.business.handler.BaseHandler;
import com.framework.system.db.query.OrderVO;
import com.framework.system.util.JsonUtil;

 /**   
 * @Title: Handler
 * @Description: 软件版本管理业务处理器
 * @author feng.gu
 * @date 2016-07-27 16:18:42
 * @version V1.0   
 *
 */
public class SoftInfoHandler extends BaseHandler{
	private static Logger logger = Logger.getLogger(SoftInfoService.class);
	/**
	 * 解析器
	 */
	private SoftInfoParse softInfoParse = SoftInfoParse.getInstance();
	/**
	 * 业务处理器
	 */
	private SoftInfoService softInfoService = SoftInfoService.getInstance();
	/**
	 * 封装器
	 */
	private SoftInfoPack softInfoPack = SoftInfoPack.getInstance();

	private static SoftInfoHandler softInfoHandler;
	
	/**
	 * 系统服务类
	 */
	private SystemService systemService = SystemService.getInstance();

	/**
	 * 获取实例
	 * 
	 * @return
	 */
	public static SoftInfoHandler getInstance() {
		if (softInfoHandler == null) {
			softInfoHandler = new SoftInfoHandler();
		}
		return softInfoHandler;
	}

	/**
	 * 
	 * @param type 1-json 2-xml
	 * @param entityName
	 * @param command
	 * @param reqStr
	 * @param request
	 * @param response
	 */
	public String doHandler(int type,String command,String reqStr, HttpServletRequest request,
			HttpServletResponse response) {	
		logger.debug("请求消息："+reqStr);
		String resultStr="";
		try {
			//add gufeng
			//特殊接口处理
			if("QUERY_SOFT_UPDATE_INFO_REQUEST".equals(command)){
				String returnaction="QUERY_SOFT_UPDATE_INFO_RESPONSE";
				Map reqParams = JsonUtil.getMap4Json(reqStr);
				JSONObject contentreq = (JSONObject) reqParams.get("content");
				if (contentreq != null) {					
					String currentCode = (String) contentreq.get("currentCode");					
					resultStr = systemService.getUpdateVersion(currentCode);
				}
				return resultStr;
			}
			//end
			// 解析
			Map<String, Object> parseMap = softInfoParse.parse(type,command,reqStr,request);		
			String action = (String) parseMap.get("action");
			SoftInfoEntity softInfo = (SoftInfoEntity) parseMap.get("softInfo");
			List<SoftInfoEntity> softInfoList = (List<SoftInfoEntity>) parseMap.get("softInfoList");
			Integer id = (Integer) parseMap.get("id");			
			Map<String, Object> queryMap = (Map<String, Object>) parseMap.get("queryMap");
			int pageno = (Integer) parseMap.get("pageno");
			int pagesize = (Integer) parseMap.get("pagesize");
			List<OrderVO> orderList = (List<OrderVO>) parseMap.get("orderList");
			
						
			// 业务处理
			Object result=null;
			if ("save".equals(action)) {
				result = softInfoService.save(softInfo);
			} else if ("saveList".equals(action)) {
				result = softInfoService.saveList(softInfoList);
			} else if ("getById".equals(action)) {
				result = softInfoService.getById(id);
			} else if ("getListByCondition".equals(action)) {
			    //根据数据权限 增加查询条件
				queryMap = systemService.addDataRule("SoftInfoEntity",queryMap,request);
				result = softInfoService.getListByCondition(queryMap,orderList, pageno,
						pagesize);
			} else if ("del".equals(action)) {
				result = softInfoService.del(id);
			} else if ("delList".equals(action)) {
				result = softInfoService.delList(queryMap);
			}
			// 封装
			Map<String, Object> packMap = softInfoPack.pack(type,action,result,softInfo);
			String actionBack = (String)packMap.get("action");
			String resultBack = (String)packMap.get("result");
			String desBack = (String)packMap.get("des");
			JSONObject pageBack = (JSONObject)packMap.get("page");
			JSONObject contentBack = (JSONObject)packMap.get("content");
			
			JSONObject repJson = new JSONObject();
			if(actionBack!=null&&!"".equals(actionBack)){
				repJson.put("action", actionBack);
			}
			if(resultBack!=null&&!"".equals(resultBack)){
				repJson.put("result", resultBack);
			}
			if(desBack!=null&&!"".equals(desBack)){
				repJson.put("des", desBack);
			}
			if(pageBack!=null){
				repJson.put("page", pageBack);
			}
			if(contentBack!=null&&!"".equals(contentBack)){
				repJson.put("content", contentBack);
			}
			logger.debug("返回消息："+repJson.toString());
			resultStr = repJson.toString();
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			logger.error(e);
		}
		return resultStr;
	}
}
