package weixin.controller;

import javax.servlet.http.HttpServletRequest;

import org.apache.log4j.Logger;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

@RequestMapping("/wechatHealthAssessment")
@Controller
public class WeixinHealthAssessmentController {
	private static Logger logger = Logger
			.getLogger(WeixinHealthAssessmentController.class);
	
	/**
	 * 健康评估列表页
	 * 
	 * @param request
	 * @return
	 */
	@RequestMapping(params = "main")
	public ModelAndView center(HttpServletRequest request) {
		ModelAndView mav = new ModelAndView("/weixin/weixinHealthAssessment/weixinHealthAssessmentList");
		String olderId = request.getParameter("olderId");
		mav.addObject("olderId", olderId);
		return mav;
	}
	
	/**
	 * 健康报告详情页
	 * 
	 * @param request
	 * @return
	 */
	@RequestMapping(params = "mainBG")
	public ModelAndView centerBG(HttpServletRequest request) {
		ModelAndView mav = new ModelAndView("/weixin/weixinHealthAssessment/weixinHealthReport");
		String healthReportId = request.getParameter("healthReportId");
		String olderId = request.getParameter("olderId");
		String type = request.getParameter("type");
		mav.addObject("healthReportId", healthReportId);
		mav.addObject("olderId", olderId);
		mav.addObject("type", type);
		return mav;
	}
	
	/**
	 * 健康报告图片详情页
	 * 
	 * @param request
	 * @return
	 */
	@RequestMapping(params = "mainBGphotos")
	public ModelAndView centerBGphotos(HttpServletRequest request) {
		ModelAndView mav = new ModelAndView("/weixin/weixinHealthAssessment/weixinHealthReportPhotos");
		String healthReportId = request.getParameter("healthReportId");
		String olderId = request.getParameter("olderId");
		String type = request.getParameter("type");
		mav.addObject("healthReportId", healthReportId);
		mav.addObject("olderId", olderId);
		mav.addObject("type", type);
		return mav;
	}
}
