package fsk.handler.sendReceiveCarefulPhoto;

import java.io.OutputStream;
import java.util.List;
import java.util.Map;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import net.sf.json.JSONObject;

import org.apache.log4j.Logger;

import fsk.entity.sendReceiveCarefulPhoto.SendReceiveCarefulPhotoEntity;
import fsk.pack.sendReceiveCarefulPhoto.SendReceiveCarefulPhotoPack;
import fsk.parse.sendReceiveCarefulPhoto.SendReceiveCarefulPhotoParse;
import fsk.service.sendReceiveCarefulPhoto.SendReceiveCarefulPhotoService;
import com.framework.system.common.service.SystemService;

import com.framework.system.business.handler.BaseHandler;
import com.framework.system.db.query.OrderVO;

 /**   
 * @Title: Handler
 * @Description: 交接班图片业务处理器
 * @author feng.gu
 * @date 2016-10-19 13:13:19
 * @version V1.0   
 *
 */
public class SendReceiveCarefulPhotoHandler extends BaseHandler{
	private static Logger logger = Logger.getLogger(SendReceiveCarefulPhotoService.class);
	/**
	 * 解析器
	 */
	private SendReceiveCarefulPhotoParse sendReceiveCarefulPhotoParse = SendReceiveCarefulPhotoParse.getInstance();
	/**
	 * 业务处理器
	 */
	private SendReceiveCarefulPhotoService sendReceiveCarefulPhotoService = SendReceiveCarefulPhotoService.getInstance();
	/**
	 * 封装器
	 */
	private SendReceiveCarefulPhotoPack sendReceiveCarefulPhotoPack = SendReceiveCarefulPhotoPack.getInstance();

	private static SendReceiveCarefulPhotoHandler sendReceiveCarefulPhotoHandler;
	
	/**
	 * 系统服务类
	 */
	private SystemService systemService = SystemService.getInstance();

	/**
	 * 获取实例
	 * 
	 * @return
	 */
	public static SendReceiveCarefulPhotoHandler getInstance() {
		if (sendReceiveCarefulPhotoHandler == null) {
			sendReceiveCarefulPhotoHandler = new SendReceiveCarefulPhotoHandler();
		}
		return sendReceiveCarefulPhotoHandler;
	}

	/**
	 * 
	 * @param type 1-json 2-xml
	 * @param entityName
	 * @param command
	 * @param reqStr
	 * @param request
	 * @param response
	 */
	public String doHandler(int type,String command,String reqStr, HttpServletRequest request,
			HttpServletResponse response) {		
		logger.debug("请求消息："+reqStr);
		String resultStr="";
		try {
			// 解析
			Map<String, Object> parseMap = sendReceiveCarefulPhotoParse.parse(type,command,reqStr,request);		
			String action = (String) parseMap.get("action");
			SendReceiveCarefulPhotoEntity sendReceiveCarefulPhoto = (SendReceiveCarefulPhotoEntity) parseMap.get("sendReceiveCarefulPhoto");
			List<SendReceiveCarefulPhotoEntity> sendReceiveCarefulPhotoList = (List<SendReceiveCarefulPhotoEntity>) parseMap.get("sendReceiveCarefulPhotoList");
			Integer id = (Integer) parseMap.get("id");			
			Map<String, Object> queryMap = (Map<String, Object>) parseMap.get("queryMap");
			Integer pageno = (Integer) parseMap.get("pageno");
			Integer pagesize = (Integer) parseMap.get("pagesize");
			List<OrderVO> orderList = (List<OrderVO>) parseMap.get("orderList");
			
															Boolean sendReceiveCarefulShow = (Boolean) parseMap.get("sendReceiveCarefulShow");
			Boolean delSendReceiveCareful = (Boolean) parseMap.get("delSendReceiveCareful");
															
			// 业务处理
			Object result=null;
			if ("save".equals(action)) {
				result = sendReceiveCarefulPhotoService.save(sendReceiveCarefulPhoto);
			} else if ("saveList".equals(action)) {
				result = sendReceiveCarefulPhotoService.saveList(sendReceiveCarefulPhotoList);
			} else if ("getById".equals(action)) {
				result = sendReceiveCarefulPhotoService.getById(id,sendReceiveCarefulShow);
			} else if ("getListByCondition".equals(action)) {
			    //根据数据权限 增加查询条件
				queryMap = systemService.addDataRuleByRoles("SendReceiveCarefulPhotoEntity",queryMap,request);
				result = sendReceiveCarefulPhotoService.getListByCondition(queryMap,orderList, pageno,
						pagesize,sendReceiveCarefulShow);
			} else if ("del".equals(action)) {
				result = sendReceiveCarefulPhotoService.del(id,delSendReceiveCareful);
			} else if ("delList".equals(action)) {
				result = sendReceiveCarefulPhotoService.delList(queryMap,delSendReceiveCareful);
			}
			// 封装
			Map<String, Object> packMap = sendReceiveCarefulPhotoPack.pack(type,action,result,sendReceiveCarefulPhoto);
			String actionBack = (String)packMap.get("action");
			String resultBack = (String)packMap.get("result");
			String desBack = (String)packMap.get("des");
			JSONObject pageBack = (JSONObject)packMap.get("page");
			JSONObject contentBack = (JSONObject)packMap.get("content");
			
			JSONObject repJson = new JSONObject();
			if(actionBack!=null&&!"".equals(actionBack)){
				repJson.put("action", actionBack);
			}
			if(resultBack!=null&&!"".equals(resultBack)){
				repJson.put("result", resultBack);
			}
			if(desBack!=null&&!"".equals(desBack)){
				repJson.put("des", desBack);
			}
			if(pageBack!=null){
				repJson.put("page", pageBack);
			}
			if(contentBack!=null&&!"".equals(contentBack)){
				repJson.put("content", contentBack);
			}
			logger.debug("返回消息："+repJson.toString());
			resultStr = repJson.toString();
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			logger.error(e);
		}
		return resultStr;
	}
}
