						if (!"".equals(idss)) {
							idss = idss.replaceAll(",,", ",");
							idss = idss.substring(0, idss.length() - 1);
							queryMap.put("id_in", idss);
						} else {
							idss = "0";
							queryMap.put("id_in", idss);
						}

					} else {
						idss = "0";
						queryMap.put("id_in", idss);
					}
				}
				//
				queryMap = systemService.addDataRuleByRoles("OlderEntity", queryMap, request);
				result = olderService.getListByCondition(queryMap, orderList, pageno, pagesize, userShow, nurseEmployeeShow, olderSiteListShow,
