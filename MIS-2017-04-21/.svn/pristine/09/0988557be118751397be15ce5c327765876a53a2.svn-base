				}
				boolean savaPhoto = false;// 是否进行身份证照片的保存
				// 新增时生成会员号加上入会时间
				if (older.getId() == null) {
					older.setMemberNum(createNum());
					older.setCreateTime(formater.format(new Date()));
					savaPhoto = true;
				}
				//
				// 创建user
				if (older.getUserId() == null && older.getIdnumber() != null) {
					// 校验身份证为账号名是否已存在
