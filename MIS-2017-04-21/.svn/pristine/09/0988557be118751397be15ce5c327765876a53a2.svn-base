						if (olderEntitylist != null && olderEntitylist.size() > 0) {
							resultStr = "{\"action\":\"ADD_OLDER_INFO_RESPONSE\",\"result\":\"failure\",\"des\":\"该会员卡号已存在！\"}";
							logger.debug("返回消息：" + resultStr);
							return resultStr;
						}
