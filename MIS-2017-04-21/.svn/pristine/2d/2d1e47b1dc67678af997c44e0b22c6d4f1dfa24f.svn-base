package fsk.pack.assessmentTask;

import java.util.HashMap;
import java.util.Map;

import net.sf.json.JSONArray;
import net.sf.json.JSONObject;

import org.apache.log4j.Logger;

import fsk.entity.assessmentTask.AssessmentTaskEntity;

import com.framework.system.db.query.PageList;

/**
 * @Title: Pack
 * @Description: 评估任务封装器
 * @author feng.gu
 * @date 2016-07-19 11:09:30
 * @version V1.0
 * 
 */
public class AssessmentTaskPack {
	private static Logger logger = Logger.getLogger(AssessmentTaskPack.class);
	private static AssessmentTaskPack assessmentTaskPack;

	/**
	 * 获取实例
	 * 
	 * @return
	 */
	public static AssessmentTaskPack getInstance() {
		if (assessmentTaskPack == null) {
			assessmentTaskPack = new AssessmentTaskPack();
		}
		return assessmentTaskPack;
	}

	public Map<String, Object> pack(int type, String action, Object request,
			Object entity) {
		// 定义返回参数
		Map<String, Object> packMap = new HashMap<String, Object>();
		if (type == 1) {
			// json
			packMap = this.packByJson(action, request, entity);
		} else if (type == 2) {
			// xml
			packMap = this.packByXml(action, request, entity);
		}
		return packMap;
	}

	private Map<String, Object> packByJson(String action, Object request,
			Object entity) {
		// 定义返回参数
		Map<String, Object> packMap = new HashMap<String, Object>();
		String actionBack = null;
		String resultBack = null;
		String desBack = null;
		JSONObject pageBack = null;
		JSONObject contentBack = null;
		try {
			if ("save".equals(action)) {
				actionBack = "ADD_ASSESSMENT_TASK_INFO_RESPONSE";
				if (request.equals(true)) {
					resultBack = "100";
					desBack = "success";
				} else if (request.equals(false)) {
					resultBack = "200";
					desBack = "failure";
				}
				AssessmentTaskEntity assessmentTask = (AssessmentTaskEntity) entity;
				if (assessmentTask != null) {
					contentBack = new JSONObject();
					contentBack.put("id", assessmentTask.getId());

					if (assessmentTask.getOlder() != null) {
						contentBack.put("olderId", assessmentTask.getOlder()
								.getId());
					}
					if (assessmentTask.getHealthAssessment() != null) {
						contentBack.put("healthAssessmentId", assessmentTask
								.getHealthAssessment().getId());
					}
					if (assessmentTask.getDistributeEmployee() != null) {
						contentBack.put("distributeEmployeeId", assessmentTask
								.getDistributeEmployee().getId());
					}
					if (assessmentTask.getAssessmentEmployee() != null) {
						contentBack.put("assessmentEmployeeId", assessmentTask
								.getAssessmentEmployee().getId());
					}
				}
			} else if ("getById".equals(action)) {
				actionBack = "QUERY_ASSESSMENT_TASK_INFO_RESPONSE";
				resultBack = "100";
				desBack = "success";
				AssessmentTaskEntity assessmentTask = (AssessmentTaskEntity) request;
				if (assessmentTask != null) {
					contentBack = JSONObject.fromObject(assessmentTask);
					if (assessmentTask.getOlder() != null) {
						contentBack.put("older", JSONObject
								.fromObject(assessmentTask.getOlder()));
					}
					if (assessmentTask.getHealthAssessment() != null) {
						contentBack.put("healthAssessment", JSONObject
								.fromObject(assessmentTask
										.getHealthAssessment()));
					}
					if (assessmentTask.getDistributeEmployee() != null) {
						contentBack.put("distributeEmployee", JSONObject
								.fromObject(assessmentTask
										.getDistributeEmployee()));
					}
					if (assessmentTask.getAssessmentEmployee() != null) {
						contentBack.put("assessmentEmployee", JSONObject
								.fromObject(assessmentTask
										.getAssessmentEmployee()));
					}
					if (assessmentTask.getAssessmentLogList() != null) {
						// pei
						contentBack.put("assessmentLogList", JSONArray
								.fromObject(assessmentTask
										.getAssessmentLogList()));
					}
				}
			} else if ("getListByCondition".equals(action)) {
				actionBack = "QUERY_ASSESSMENT_TASK_LIST_RESPONSE";
				resultBack = "100";
				desBack = "success";
				PageList pageList = (PageList) request;
				if (pageList != null && pageList.getResultList() != null
						&& pageList.getResultList().size() > 0) {
					contentBack = new JSONObject();
					pageBack = new JSONObject();
					JSONArray list = JSONArray.fromObject(pageList
							.getResultList());
					contentBack.put("assessmentTaskList", list);

					pageBack.put("pageno", pageList.getPageno());
					pageBack.put("pagesize", pageList.getPagesize());
					pageBack.put("recordCount", pageList.getRecordCount());
					pageBack.put("pageCount", pageList.getPageCount());

				}
			} else if ("del".equals(action)) {
				actionBack = "DEL_ASSESSMENT_TASK_INFO_REQUEST";
				if (request.equals(true)) {
					resultBack = "100";
					desBack = "success";
				} else if (request.equals(false)) {
					resultBack = "200";
					desBack = "failure";
				}
			} else if ("delList".equals(action)) {
				actionBack = "DEL_ASSESSMENT_TASK_LIST_REQUEST";
				if (request.equals(true)) {
					resultBack = "100";
					desBack = "success";
				} else if (request.equals(false)) {
					resultBack = "200";
					desBack = "failure";
				}
			}
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			logger.error(e);
		}
		if (actionBack != null && !"".equals(actionBack)) {
			packMap.put("action", actionBack);
		}
		if (resultBack != null && !"".equals(resultBack)) {
			packMap.put("result", resultBack);
		}
		if (desBack != null && !"".equals(desBack)) {
			packMap.put("des", desBack);
		}
		if (pageBack != null) {
			packMap.put("page", pageBack);
		}
		if (contentBack != null) {
			packMap.put("content", contentBack);
		}
		return packMap;
	}

	private Map<String, Object> packByXml(String action, Object request,
			Object entity) {
		Map<String, Object> packMap = new HashMap<String, Object>();
		return packMap;
	}

}
