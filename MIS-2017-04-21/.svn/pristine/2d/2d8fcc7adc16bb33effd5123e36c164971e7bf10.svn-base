package fsk.handler.examinationData;

import java.io.OutputStream;
import java.util.List;
import java.util.Map;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import net.sf.json.JSONObject;

import org.apache.log4j.Logger;

import fsk.entity.examinationData.ExaminationDataEntity;
import fsk.pack.examinationData.ExaminationDataPack;
import fsk.parse.examinationData.ExaminationDataParse;
import fsk.service.examinationData.ExaminationDataService;
import com.framework.system.common.service.SystemService;

import com.framework.system.business.handler.BaseHandler;
import com.framework.system.db.query.OrderVO;

 /**   
 * @Title: Handler
 * @Description: 体检数据信息表业务处理器
 * @author feng.gu
 * @date 2016-10-11 15:23:02
 * @version V1.0   
 *
 */
public class ExaminationDataHandler extends BaseHandler{
	private static Logger logger = Logger.getLogger(ExaminationDataService.class);
	/**
	 * 解析器
	 */
	private ExaminationDataParse examinationDataParse = ExaminationDataParse.getInstance();
	/**
	 * 业务处理器
	 */
	private ExaminationDataService examinationDataService = ExaminationDataService.getInstance();
	/**
	 * 封装器
	 */
	private ExaminationDataPack examinationDataPack = ExaminationDataPack.getInstance();

	private static ExaminationDataHandler examinationDataHandler;
	
	/**
	 * 系统服务类
	 */
	private SystemService systemService = SystemService.getInstance();

	/**
	 * 获取实例
	 * 
	 * @return
	 */
	public static ExaminationDataHandler getInstance() {
		if (examinationDataHandler == null) {
			examinationDataHandler = new ExaminationDataHandler();
		}
		return examinationDataHandler;
	}

	/**
	 * 
	 * @param type 1-json 2-xml
	 * @param entityName
	 * @param command
	 * @param reqStr
	 * @param request
	 * @param response
	 */
	public String doHandler(int type,String command,String reqStr, HttpServletRequest request,
			HttpServletResponse response) {		
		logger.debug("请求消息："+reqStr);
		String resultStr="";
		try {
			// 解析
			Map<String, Object> parseMap = examinationDataParse.parse(type,command,reqStr,request);		
			String action = (String) parseMap.get("action");
			ExaminationDataEntity examinationData = (ExaminationDataEntity) parseMap.get("examinationData");
			List<ExaminationDataEntity> examinationDataList = (List<ExaminationDataEntity>) parseMap.get("examinationDataList");
			Integer id = (Integer) parseMap.get("id");			
			Map<String, Object> queryMap = (Map<String, Object>) parseMap.get("queryMap");
			int pageno = (Integer) parseMap.get("pageno");
			int pagesize = (Integer) parseMap.get("pagesize");
			List<OrderVO> orderList = (List<OrderVO>) parseMap.get("orderList");
			
															Boolean examinationRecordShow = (Boolean) parseMap.get("examinationRecordShow");
			Boolean delExaminationRecord = (Boolean) parseMap.get("delExaminationRecord");
																								Boolean type1DataDicShow = (Boolean) parseMap.get("type1DataDicShow");
			Boolean delType1DataDic = (Boolean) parseMap.get("delType1DataDic");
																								Boolean type2DataDicShow = (Boolean) parseMap.get("type2DataDicShow");
			Boolean delType2DataDic = (Boolean) parseMap.get("delType2DataDic");
																		            Boolean examinationDataFileListShow = (Boolean) parseMap.get("examinationDataFileListShow");	
            Boolean delExaminationDataFileList = (Boolean) parseMap.get("delExaminationDataFileList");
																					            Boolean examinationDataPhotoListShow = (Boolean) parseMap.get("examinationDataPhotoListShow");	
            Boolean delExaminationDataPhotoList = (Boolean) parseMap.get("delExaminationDataPhotoList");
																		
			// 业务处理
			Object result=null;
			if ("save".equals(action)) {
				result = examinationDataService.save(examinationData);
			} else if ("saveList".equals(action)) {
				result = examinationDataService.saveList(examinationDataList);
			} else if ("getById".equals(action)) {
				result = examinationDataService.getById(id,examinationRecordShow,type1DataDicShow,type2DataDicShow,examinationDataFileListShow,examinationDataPhotoListShow);
			} else if ("getListByCondition".equals(action)) {
			    //根据数据权限 增加查询条件
				queryMap = systemService.addDataRuleByRoles("ExaminationDataEntity",queryMap,request);
				result = examinationDataService.getListByCondition(queryMap,orderList, pageno,
						pagesize,examinationRecordShow,type1DataDicShow,type2DataDicShow,examinationDataFileListShow,examinationDataPhotoListShow);
			} else if ("del".equals(action)) {
				result = examinationDataService.del(id,delExaminationRecord,delType1DataDic,delType2DataDic,delExaminationDataFileList,delExaminationDataPhotoList);
			} else if ("delList".equals(action)) {
				result = examinationDataService.delList(queryMap,delExaminationRecord,delType1DataDic,delType2DataDic,delExaminationDataFileList,delExaminationDataPhotoList);
			}
			// 封装
			Map<String, Object> packMap = examinationDataPack.pack(type,action,result,examinationData);
			String actionBack = (String)packMap.get("action");
			String resultBack = (String)packMap.get("result");
			String desBack = (String)packMap.get("des");
			JSONObject pageBack = (JSONObject)packMap.get("page");
			JSONObject contentBack = (JSONObject)packMap.get("content");
			
			JSONObject repJson = new JSONObject();
			if(actionBack!=null&&!"".equals(actionBack)){
				repJson.put("action", actionBack);
			}
			if(resultBack!=null&&!"".equals(resultBack)){
				repJson.put("result", resultBack);
			}
			if(desBack!=null&&!"".equals(desBack)){
				repJson.put("des", desBack);
			}
			if(pageBack!=null){
				repJson.put("page", pageBack);
			}
			if(contentBack!=null&&!"".equals(contentBack)){
				repJson.put("content", contentBack);
			}
			logger.debug("返回消息："+repJson.toString());
			resultStr = repJson.toString();
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			logger.error(e);
		}
		return resultStr;
	}
}
