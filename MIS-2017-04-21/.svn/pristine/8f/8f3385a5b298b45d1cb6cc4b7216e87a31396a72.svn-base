package fsk.handler.siteEmployee;

import java.io.OutputStream;
import java.util.List;
import java.util.Map;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import net.sf.json.JSONObject;

import org.apache.log4j.Logger;

import fsk.entity.siteEmployee.SiteEmployeeEntity;
import fsk.pack.siteEmployee.SiteEmployeePack;
import fsk.parse.siteEmployee.SiteEmployeeParse;
import fsk.service.siteEmployee.SiteEmployeeService;
import com.framework.system.common.service.SystemService;

import com.framework.system.business.handler.BaseHandler;
import com.framework.system.db.query.OrderVO;

 /**   
 * @Title: Handler
 * @Description: 站点员工关联表业务处理器
 * @author feng.gu
 * @date 2016-06-21 08:39:47
 * @version V1.0   
 *
 */
public class SiteEmployeeHandler extends BaseHandler{
	private static Logger logger = Logger.getLogger(SiteEmployeeService.class);
	/**
	 * 解析器
	 */
	private SiteEmployeeParse siteEmployeeParse = SiteEmployeeParse.getInstance();
	/**
	 * 业务处理器
	 */
	private SiteEmployeeService siteEmployeeService = SiteEmployeeService.getInstance();
	/**
	 * 封装器
	 */
	private SiteEmployeePack siteEmployeePack = SiteEmployeePack.getInstance();

	private static SiteEmployeeHandler siteEmployeeHandler;
	
	/**
	 * 系统服务类
	 */
	private SystemService systemService = SystemService.getInstance();

	/**
	 * 获取实例
	 * 
	 * @return
	 */
	public static SiteEmployeeHandler getInstance() {
		if (siteEmployeeHandler == null) {
			siteEmployeeHandler = new SiteEmployeeHandler();
		}
		return siteEmployeeHandler;
	}

	/**
	 * 
	 * @param type 1-json 2-xml
	 * @param entityName
	 * @param command
	 * @param reqStr
	 * @param request
	 * @param response
	 */
	public String doHandler(int type,String command,String reqStr, HttpServletRequest request,
			HttpServletResponse response) {	
		logger.debug("请求消息："+reqStr);
		String resultStr="";
		try {
			// 解析
			Map<String, Object> parseMap = siteEmployeeParse.parse(type,command,reqStr,request);		
			String action = (String) parseMap.get("action");
			SiteEmployeeEntity siteEmployee = (SiteEmployeeEntity) parseMap.get("siteEmployee");
			List<SiteEmployeeEntity> siteEmployeeList = (List<SiteEmployeeEntity>) parseMap.get("siteEmployeeList");
			Integer id = (Integer) parseMap.get("id");			
			Map<String, Object> queryMap = (Map<String, Object>) parseMap.get("queryMap");
			int pageno = (Integer) parseMap.get("pageno");
			int pagesize = (Integer) parseMap.get("pagesize");
			List<OrderVO> orderList = (List<OrderVO>) parseMap.get("orderList");
			
															Boolean siteShow = (Boolean) parseMap.get("siteShow");
			Boolean delSite = (Boolean) parseMap.get("delSite");
																								Boolean employeeShow = (Boolean) parseMap.get("employeeShow");
			Boolean delEmployee = (Boolean) parseMap.get("delEmployee");
															
			// 业务处理
			Object result=null;
			if ("save".equals(action)) {
				result = siteEmployeeService.save(siteEmployee);
			} else if ("saveList".equals(action)) {
				result = siteEmployeeService.saveList(siteEmployeeList);
			} else if ("getById".equals(action)) {
				result = siteEmployeeService.getById(id,siteShow,employeeShow);
			} else if ("getListByCondition".equals(action)) {
			    //根据数据权限 增加查询条件
				queryMap = systemService.addDataRule("SiteEmployeeEntity",queryMap,request);
				result = siteEmployeeService.getListByCondition(queryMap,orderList, pageno,
						pagesize,siteShow,employeeShow);
			} else if ("del".equals(action)) {
				result = siteEmployeeService.del(id,delSite,delEmployee);
			} else if ("delList".equals(action)) {
				result = siteEmployeeService.delList(queryMap,delSite,delEmployee);
			}
			// 封装
			Map<String, Object> packMap = siteEmployeePack.pack(type,action,result,siteEmployee);
			String actionBack = (String)packMap.get("action");
			String resultBack = (String)packMap.get("result");
			String desBack = (String)packMap.get("des");
			JSONObject pageBack = (JSONObject)packMap.get("page");
			JSONObject contentBack = (JSONObject)packMap.get("content");
			
			JSONObject repJson = new JSONObject();
			if(actionBack!=null&&!"".equals(actionBack)){
				repJson.put("action", actionBack);
			}
			if(resultBack!=null&&!"".equals(resultBack)){
				repJson.put("result", resultBack);
			}
			if(desBack!=null&&!"".equals(desBack)){
				repJson.put("des", desBack);
			}
			if(pageBack!=null){
				repJson.put("page", pageBack);
			}
			if(contentBack!=null&&!"".equals(contentBack)){
				repJson.put("content", contentBack);
			}
			logger.debug("返回消息："+repJson.toString());
			resultStr = repJson.toString();
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			logger.error(e);
		}
		return resultStr;
	}
}
