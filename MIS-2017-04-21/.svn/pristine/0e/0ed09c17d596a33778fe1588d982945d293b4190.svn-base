package fsk.handler.devPos;

import java.io.OutputStream;
import java.util.List;
import java.util.Map;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import net.sf.json.JSONObject;

import org.apache.log4j.Logger;

import fsk.entity.devPos.DevPosEntity;
import fsk.pack.devPos.DevPosPack;
import fsk.parse.devPos.DevPosParse;
import fsk.service.devPos.DevPosService;
import com.framework.system.common.service.SystemService;

import com.framework.system.business.handler.BaseHandler;
import com.framework.system.db.query.OrderVO;

 /**   
 * @Title: Handler
 * @Description: 设备位置历史信息表业务处理器
 * @author feng.gu
 * @date 2016-09-22 11:13:06
 * @version V1.0   
 *
 */
public class DevPosHandler extends BaseHandler{
	private static Logger logger = Logger.getLogger(DevPosService.class);
	/**
	 * 解析器
	 */
	private DevPosParse devPosParse = DevPosParse.getInstance();
	/**
	 * 业务处理器
	 */
	private DevPosService devPosService = DevPosService.getInstance();
	/** 
	 * 封装器
	 */
	private DevPosPack devPosPack = DevPosPack.getInstance();

	private static DevPosHandler devPosHandler;
	
	/**
	 * 系统服务类
	 */
	private SystemService systemService = SystemService.getInstance();

	/**
	 * 获取实例
	 * 
	 * @return
	 */
	public static DevPosHandler getInstance() {
		if (devPosHandler == null) {
			devPosHandler = new DevPosHandler();
		}
		return devPosHandler;
	}

	/**
	 * 
	 * @param type 1-json 2-xml
	 * @param entityName
	 * @param command
	 * @param reqStr
	 * @param request
	 * @param response
	 */
	public String doHandler(int type,String command,String reqStr, HttpServletRequest request,
			HttpServletResponse response) {		
		logger.debug("请求消息："+reqStr);
		String resultStr="";
		try {
	    	logger.debug("请求消息：" + reqStr.toString());
			// 解析
			Map<String, Object> parseMap = devPosParse.parse(type,command,reqStr,request);		
			String action = (String) parseMap.get("action");
			DevPosEntity devPos = (DevPosEntity) parseMap.get("devPos");
			List<DevPosEntity> devPosList = (List<DevPosEntity>) parseMap.get("devPosList");
			Integer id = (Integer) parseMap.get("id");			
			Map<String, Object> queryMap = (Map<String, Object>) parseMap.get("queryMap");
			int pageno = (Integer) parseMap.get("pageno");
			int pagesize = (Integer) parseMap.get("pagesize");
			List<OrderVO> orderList = (List<OrderVO>) parseMap.get("orderList");
			
															Boolean devShow = (Boolean) parseMap.get("devShow");
			Boolean delDev = (Boolean) parseMap.get("delDev");
															
			// 业务处理
			Object result=null;
			if ("save".equals(action)) {
				result = devPosService.save(devPos);
			} else if ("saveList".equals(action)) {
				result = devPosService.saveList(devPosList);
			} else if ("getById".equals(action)) {
				result = devPosService.getById(id,devShow);
			} else if ("getListByCondition".equals(action)) {
			    //根据数据权限 增加查询条件
				queryMap = systemService.addDataRuleByRoles("DevPosEntity",queryMap,request);
				result = devPosService.getListByCondition(queryMap,orderList, pageno,
						pagesize,devShow);
			} else if ("del".equals(action)) {
				result = devPosService.del(id,delDev);
			} else if ("delList".equals(action)) {
				result = devPosService.delList(queryMap,delDev);
			}
			// 封装
			Map<String, Object> packMap = devPosPack.pack(type,action,result,devPos);
			String actionBack = (String)packMap.get("action");
			String resultBack = (String)packMap.get("result");
			String desBack = (String)packMap.get("des");
			JSONObject pageBack = (JSONObject)packMap.get("page");
			JSONObject contentBack = (JSONObject)packMap.get("content");
			
			JSONObject repJson = new JSONObject();
			if(actionBack!=null&&!"".equals(actionBack)){
				repJson.put("action", actionBack);
			}
			if(resultBack!=null&&!"".equals(resultBack)){
				repJson.put("result", resultBack);
			}
			if(desBack!=null&&!"".equals(desBack)){
				repJson.put("des", desBack);
			}
			if(pageBack!=null){
				repJson.put("page", pageBack);
			}
			if(contentBack!=null&&!"".equals(contentBack)){
				repJson.put("content", contentBack);
			}
			logger.debug("返回消息："+repJson.toString());
			resultStr = repJson.toString();
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			logger.error(e);
		}
		return resultStr;
	}
}
