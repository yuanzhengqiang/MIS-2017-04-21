package fsk.handler.olderSite;

import java.io.OutputStream;
import java.util.List;
import java.util.Map;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import net.sf.json.JSONObject;

import org.apache.log4j.Logger;

import fsk.entity.olderSite.OlderSiteEntity;
import fsk.pack.olderSite.OlderSitePack;
import fsk.parse.olderSite.OlderSiteParse;
import fsk.service.olderSite.OlderSiteService;
import com.framework.system.common.service.SystemService;

import com.framework.system.business.handler.BaseHandler;
import com.framework.system.db.query.OrderVO;

 /**   
 * @Title: Handler
 * @Description: 老人站点关联表业务处理器
 * @author feng.gu
 * @date 2017-03-06 10:53:04
 * @version V1.0   
 *
 */
public class OlderSiteHandler extends BaseHandler{
	private static Logger logger = Logger.getLogger(OlderSiteService.class);
	/**
	 * 解析器
	 */
	private OlderSiteParse olderSiteParse = OlderSiteParse.getInstance();
	/**
	 * 业务处理器
	 */
	private OlderSiteService olderSiteService = OlderSiteService.getInstance();
	/**
	 * 封装器
	 */
	private OlderSitePack olderSitePack = OlderSitePack.getInstance();

	private static OlderSiteHandler olderSiteHandler;
	
	/**
	 * 系统服务类
	 */
	private SystemService systemService = SystemService.getInstance();

	/**
	 * 获取实例
	 * 
	 * @return
	 */
	public static OlderSiteHandler getInstance() {
		if (olderSiteHandler == null) {
			olderSiteHandler = new OlderSiteHandler();
		}
		return olderSiteHandler;
	}

	/**
	 * 
	 * @param type 1-json 2-xml
	 * @param entityName
	 * @param command
	 * @param reqStr
	 * @param request
	 * @param response
	 */
	public String doHandler(int type,String command,String reqStr, HttpServletRequest request,
			HttpServletResponse response) {		
		logger.debug("请求消息："+reqStr);
		String resultStr="";
		try {
			// 解析
			Map<String, Object> parseMap = olderSiteParse.parse(type,command,reqStr,request);		
			String action = (String) parseMap.get("action");
			OlderSiteEntity olderSite = (OlderSiteEntity) parseMap.get("olderSite");
			List<OlderSiteEntity> olderSiteList = (List<OlderSiteEntity>) parseMap.get("olderSiteList");
			Integer id = (Integer) parseMap.get("id");			
			Map<String, Object> queryMap = (Map<String, Object>) parseMap.get("queryMap");
			Integer pageno = (Integer) parseMap.get("pageno");
			Integer pagesize = (Integer) parseMap.get("pagesize");
			List<OrderVO> orderList = (List<OrderVO>) parseMap.get("orderList");
			
						
			// 业务处理
			Object result=null;
			if ("save".equals(action)) {
				result = olderSiteService.save(olderSite);
			} else if ("saveList".equals(action)) {
				result = olderSiteService.saveList(olderSiteList);
			} else if ("getById".equals(action)) {
				result = olderSiteService.getById(id);
			} else if ("getListByCondition".equals(action)) {
			    //根据数据权限 增加查询条件
				queryMap = systemService.addDataRuleByRoles("OlderSiteEntity",queryMap,request);
				result = olderSiteService.getListByCondition(queryMap,orderList, pageno,
						pagesize);
			} else if ("del".equals(action)) {
				result = olderSiteService.del(id);
			} else if ("delList".equals(action)) {
				result = olderSiteService.delList(queryMap);
			}
			// 封装
			Map<String, Object> packMap = olderSitePack.pack(type,action,result,olderSite);
			String actionBack = (String)packMap.get("action");
			String resultBack = (String)packMap.get("result");
			String desBack = (String)packMap.get("des");
			JSONObject pageBack = (JSONObject)packMap.get("page");
			JSONObject contentBack = (JSONObject)packMap.get("content");
			
			JSONObject repJson = new JSONObject();
			if(actionBack!=null&&!"".equals(actionBack)){
				repJson.put("action", actionBack);
			}
			if(resultBack!=null&&!"".equals(resultBack)){
				repJson.put("result", resultBack);
			}
			if(desBack!=null&&!"".equals(desBack)){
				repJson.put("des", desBack);
			}
			if(pageBack!=null){
				repJson.put("page", pageBack);
			}
			if(contentBack!=null&&!"".equals(contentBack)){
				repJson.put("content", contentBack);
			}
			logger.debug("返回消息："+repJson.toString());
			resultStr = repJson.toString();
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			logger.error(e);
		}
		return resultStr;
	}
}
